<h1>Listing prenotaziones</h1>

<table>
  <thead>
    <tr>
      <div class="row">
        <div class="col-md-2"> <h4>Nome</h4>
        </div>

        <div class="col-md-2"> <h4>Data</h4></div>
        <div class="col-md-2"> <h4>Giorno</h4> </div>
        <div class="col-md-2"> <h4>Ora</h4> </div>
      </div>
    </tr>
  </thead>

  <tbody>
    <% @prenotaziones.each do |prenotazione| %>
      <tr>   <div class="row">
        <div class="col-md-2"> <%= prenotazione.nome %>
        </div>

        <div class="col-md-2"> <%= prenotazione.Pdata %> </div>
        <div class="col-md-2"> <%= prenotazione.Pgiorno %></div>
        <div class="col-md-2"> <%= prenotazione.Pora %> </div>
        <div class="col-md-2"> <%= link_to 'Show', prenotazione %> </div>
        <div class="col-md-2"> <%= link_to 'Edit', edit_prenotazione_path(prenotazione) %> </div>
        <div class="col-md-2"> <%= link_to 'Destroy', prenotazione, method: :delete, data: { confirm: 'Are you sure?' } %> </div>

      </div>
